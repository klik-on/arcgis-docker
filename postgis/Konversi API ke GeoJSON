#### 1. Simpan API 
import os
import requests
import urllib3

# Nonaktifkan peringatan SSL
urllib3.disable_warnings(urllib3.exceptions.InsecureRequestWarning)

# URL API
url = "https://gokups.menlhk.go.id/api/v1/kups"

# Buat folder jika belum ada
folder_path = "c:/app/data"
os.makedirs(folder_path, exist_ok=True)

try:
    # Ambil data dari API, bypass SSL verify
    response = requests.get(url, verify=False, timeout=10)
    response.raise_for_status()  # Raise exception jika status bukan 2xx

    # Simpan ke file
    output_path = os.path.join(folder_path, "kups.json")
    with open(output_path, "w", encoding="utf-8") as f:
        f.write(response.text)

    print(f"Data berhasil disimpan sebagai '{output_path}'")

except requests.RequestException as e:
    print(f"Terjadi kesalahan saat mengambil data dari API: {e}")
except IOError as e:
    print(f"Gagal menyimpan file: {e}")



### 2. Konversi json ke GeoJSON
import json

# === KONFIGURASI ===
# Ganti path ini sesuai lokasi file Anda
input_path = "C:/app/data/kups.json"
output_path = "C:/app/data/kups.geojson"

# === BACA FILE JSON ===
with open(input_path, "r", encoding="utf-8") as f:
    raw_data = json.load(f)

# === AMBIL DATA YANG DIBUTUHKAN ===
# API mengembalikan dict dengan key "data" berisi list objek
kups_list = raw_data.get("data", [])

# === KONVERSI KE GEOJSON ===
features = []

for item in kups_list:
    try:
        # Ambil koordinat
        lon = float(item["nujur"])
        lat = float(item["lintang"])

        # Buat fitur GeoJSON
        feature = {
            "type": "Feature",
            "geometry": {
                "type": "Point",
                "coordinates": [lon, lat]
            },
            "properties": {
                k: v for k, v in item.items() if k not in ["lintang", "nujur"]
            }
        }

        features.append(feature)
    except (KeyError, ValueError, TypeError) as e:
        print(f"‚ùå Lewati data karena error: {e}")

# === BENTUK AKHIR GEOJSON ===
geojson_data = {
    "type": "FeatureCollection",
    "features": features
}

# === SIMPAN SEBAGAI FILE .geojson ===
with open(output_path, "w", encoding="utf-8") as f:
    json.dump(geojson_data, f, ensure_ascii=False, indent=2)

print(f"‚úÖ Konversi selesai. File disimpan di: {output_path}")


### Versi lengkap API ‚Üí GeoJSON ‚Üí QGIS
import os
import json
import requests
import urllib3

# ========== KONFIGURASI ==========
folder_path = "C:/app/data"
json_path = os.path.join(folder_path, "kups.json")
geojson_path = os.path.join(folder_path, "kups.geojson")
url = "https://gokups.menlhk.go.id/api/v1/kups"

# ========== PERSIAPAN FOLDER ==========
os.makedirs(folder_path, exist_ok=True)

# ========== NONAKTIFKAN PERINGATAN SSL ==========
urllib3.disable_warnings(urllib3.exceptions.InsecureRequestWarning)

# ========== AMBIL DATA DARI API ==========
try:
    response = requests.get(url, verify=False, timeout=10)
    response.raise_for_status()
    with open(json_path, "w", encoding="utf-8") as f:
        f.write(response.text)
    print(f"‚úÖ Data berhasil diambil dan disimpan: {json_path}")
except requests.RequestException as e:
    print(f"‚ùå Gagal mengambil data dari API: {e}")
    exit()

# ========== KONVERSI KE GEOJSON ==========
with open(json_path, "r", encoding="utf-8") as f:
    raw_data = json.load(f)

kups_list = raw_data.get("data", [])
features = []

for item in kups_list:
    try:
        lon = float(item["nujur"])
        lat = float(item["lintang"])
        feature = {
            "type": "Feature",
            "geometry": {
                "type": "Point",
                "coordinates": [lon, lat]
            },
            "properties": {
                k: v for k, v in item.items() if k not in ["lintang", "nujur"]
            }
        }
        features.append(feature)
    except (KeyError, ValueError, TypeError) as e:
        print(f"‚ö†Ô∏è Data dilewati (koordinat tidak valid): {e}")

geojson_data = {
    "type": "FeatureCollection",
    "features": features
}

with open(geojson_path, "w", encoding="utf-8") as f:
    json.dump(geojson_data, f, ensure_ascii=False, indent=2)

print(f"‚úÖ Konversi selesai. GeoJSON disimpan di: {geojson_path}")
print(f"üßæ Jumlah titik: {len(features)}")

# ========== OPSIONAL: BUKA DI QGIS ==========
# Jalankan bagian ini hanya jika skrip dijalankan dari Python Console QGIS
try:
    from qgis.core import QgsVectorLayer
    layer = QgsVectorLayer(geojson_path, "KUPS GeoJSON", "ogr")
    if layer.isValid():
        QgsProject.instance().addMapLayer(layer)
        print("üó∫Ô∏è  Layer berhasil ditambahkan ke QGIS.")
    else:
        print("‚ùå Gagal memuat layer ke QGIS.")
except ImportError:
    print("‚ÑπÔ∏è Jalankan bagian QGIS hanya jika di dalam Python Console QGIS.")

